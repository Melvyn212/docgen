# Django
DJANGO_SECRET_KEY=changeme
DJANGO_DEBUG=true
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost

# Database (sqlite par défaut si non défini)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3
# DB_USER=
# DB_PASSWORD=
# DB_HOST=
# DB_PORT=

# Celery / Redis
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_WORKER_CONCURRENCY=7

# LaTeX
XELATEX_BIN=xelatex
LATEX_TMP_DIR=
LATEX_LOG_DIR=
LATEX_DEFAULT_PASSES=2
DOCUMENT_TTL_SECONDS=1800  # TTL après premier download (30 min par défaut)

# Stockage
DOCUMENT_STORAGE=local  # ou s3
DOCUMENT_BASE_URL=http://localhost:8000/media/documents/
DOCUMENT_STORAGE_PATH=media/documents

# Thèmes
BULLETIN_THEME_FILE=config/themes/bulletin_theme.json
HONOR_THEME_FILE=config/themes/honor_theme.json

